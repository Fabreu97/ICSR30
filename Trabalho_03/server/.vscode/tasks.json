{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build (Compilar)",
            "type": "shell",
            "command": "make",
            "args": [
                "all"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compila o projeto usando o alvo 'all' do Makefile."
        },
        {
            "label": "Run (Executar)",
            "type": "shell",
            "command": "make",
            "args": [
                "run"
            ],
            "group": "test",
            "detail": "Executa o projeto usando o alvo 'run' do Makefile."
        },
        {
            "label": "Clean (Limpar)",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "group": "build",
            "detail": "Limpa os arquivos gerados usando o alvo 'clean' do Makefile."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}